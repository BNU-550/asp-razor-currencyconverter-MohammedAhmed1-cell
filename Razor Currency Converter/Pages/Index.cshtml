@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div>
    <header class="text-center">
        <h1 class="display-4">Welcome to Razor Pages</h1>
        <h2>By Mohammed Ahmed</h2>
    </header>

    <form method="post" class="mx-auto" style="width:200px">
        <p class="col-sm-2">
            <label>Name</label>
            <input type="text" asp-for="FullName" required="true" placeholder="Enter your name" />
        </p>
        <p class="col-sm-4">
            <label>Email</label>
            <input type="email" name="Email" required="true" placeholder="Enter your email address" />
        </p>
        <p class="col-sm-2">
            <button type="submit" class="btn-btn-primary">
                Register
            </button>
        </p>
    </form>

</div>
<p class="col-sm-12">
    @ViewData["Message"]
</p>



